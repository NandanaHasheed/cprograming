#include <stdio.h>

int main() {
    int num1, num2, result;
    char operator;
    printf("Enter the first number: ");
    scanf("%d", &num1);
    printf("Enter the second number: ");
    scanf("%d", &num2);
    printf("Enter the operator (+, -, *, /, %%): ");
    scanf(" %c", &operator);
    switch (operator) {
        case '+':
            result = num1 + num2;
            printf("Result: %d + %d = %d\n", num1, num2, result);
            break;
        case '-':
            result = num1 - num2;
            printf("Result: %d - %d = %d\n", num1, num2, result);
            break;
        case '*':
            result = num1 * num2;
            printf("Result: %d * %d = %d\n", num1, num2, result);
            break;
        case '/':
                result = num1 / num2;
                printf("Result: %d / %d = %d\n", num1, num2, result);
            break;
        case '%':
                result = num1 % num2;
                printf("Result: %d %% %d = %d\n", num1, num2, result);
           
            break;
        default:
            printf("Error: Invalid operator.\n");
    }

    return 0;
}

    
